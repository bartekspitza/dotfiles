bar {
    position top
    height 30
    output primary
    i3bar_command i3bar -t
    status_command i3status
    font pango:SF Mono Semibold 12
    colors {
        background #00000080
    }
}

# Add swedish keyboard
exec_always --no-startup-id setxkbmap -layout us,se -option 'grp:win_space_toggle'

# Repeat delay and rate
exec_always --no-startup-id xset r rate 200 100

# Triple Monitor Setup
