bindsym $mod+Shift+$kb_ws6 move container to workspace number $ws6
bindsym $mod+Shift+$kb_ws7 move container to workspace number $ws7
bindsym $mod+Shift+$kb_ws8 move container to workspace number $ws8
bindsym $mod+Shift+$kb_ws9 move container to workspace number $ws9
