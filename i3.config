bindsym $mod+$kb_ws2 workspace number $ws2
bindsym $mod+$kb_ws3 workspace number $ws3
bindsym $mod+$kb_ws4 workspace number $ws4
bindsym $mod+$kb_ws5 workspace number $ws5
bindsym $mod+$kb_ws6 workspace number $ws6
bindsym $mod+$kb_ws7 workspace number $ws7
bindsym $mod+$kb_ws8 workspace number $ws8
bindsym $mod+$kb_ws9 workspace number $ws9
bindsym $mod+$kb_ws10 workspace number $ws10
