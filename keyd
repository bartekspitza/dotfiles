# --- This file should go under /etc/keyd/default.conf ---

[ids]
*

[main]
capslock = leftcontrol
rightalt = leftcontrol
leftmeta = overload(nav,meta)

# Access to keyboard arrows using CTRL + hjkl
[control]
h = left
j = down
k = up
l = right

# Since CTRL + arrows normally word skips, use Meta + hjkl for this instead
[meta]
h = C-left
j = C-down
k = C-up
l = C-right
